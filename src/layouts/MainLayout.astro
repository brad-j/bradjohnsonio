---
import '@/styles/globals.css';
import '@fontsource/darker-grotesque';
import { Button } from '@/components/ui/button';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Brad Johnson</title>
  </head>

  <body class="font-sans h-screen bg-bg">
    <header
      class="flex justify-between items-center py-3 px-24 border-b-4 border-border bg-[#DFE5F2]"
    >
      <h1 class="text-5xl font-semibold p-2">
        <a href="/">Brad Johnson</a>
      </h1>
      <nav>
        <ul class="flex text-lg gap-2">
          <li>
            <a
              href="/projects"
              class="hover:bg-main transition-all duration-300 px-3 py-1.5 rounded-base"
              >Projects</a
            >
          </li>
          <li>
            <a
              href="/resume"
              class="hover:bg-main transition-all duration-300 px-3 py-1.5 rounded-base"
              >Resume</a
            >
          </li>
          <li>
            <a
              href="#"
              class="hover:bg-main transition-all duration-300 px-3 py-1.5 rounded-base"
              >Contact</a
            >
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
