---
import MainLayout from "../layouts/MainLayout.astro";
import SocialButton from "@/components/SocialButton.astro";
---

<MainLayout>
  <div class="flex justify-center gap-10 px-12">
    <div class="md:w-2/3 mt-4 md:mt-24">
      <h1
        class="text-3xl md:text-6xl font-semibold mb-3 text-[#2A3B4C] dark:text-[#F5E6C8]"
      >
        Hi, I'm Brad
      </h1>
      <section
        class="bg-[#DFE5F2] dark:bg-[#0D151C] px-4 py-1 lg:px-8 lg:py-8 rounded-base border-4 border-[#2A3B4C] dark:border-[#F5E6C8]/65 mb-3"
      >
        <div class="text-xl md:text-3xl text-[#2A3B4C] dark:text-[#F5E6C8]">
          <p class="leading-[3rem]">
            I am a Sr. Technical Customer Success Manager at Cloudinary.
          </p>
          <p class="leading-[3rem]">
            I also love to tinker with web tech and fancy myself a web dev
            hobbyist. Checkout the <a
              href="/projects"
              class="underline hover:text-[#C27D3F] dark:hover:text-[#F4B860] transition-colors duration-200"
              >projects</a
            > I'm working on.
          </p>
        </div>
      </section>
      <section class="flex flex-wrap justify-end gap-4">
        <SocialButton
          icon="../icons/linkedin.svg"
          alt="LinkedIn Logo"
          link="https://www.linkedin.com/in/bradjohnson0311/"
          title="LinkedIn"
        />
        <SocialButton
          icon="../icons/github.svg"
          alt="GitHub Logo"
          link="https://github.com/brad-j"
          title="GitHub"
        />
        <SocialButton
          icon="../icons/mail.svg"
          alt="Email Logo"
          link="mailto:brad@bradjohnson.io"
          title="Email"
        />
      </section>
    </div>
  </div>
</MainLayout>
