---
import MainLayout from '../layouts/MainLayout.astro';
import ProjectCard from '@/components/ProjectCard.astro';
---

<MainLayout>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6 px-4 md:px-8">
    <ProjectCard
      title="Cloudinary Last Access Reports Interface"
      description="A Next.js dashboard for managing Cloudinary's Last Access Reports. Built with TypeScript, Tailwind CSS, and shadcn/ui components, this tool helps track asset usage and optimize storage by identifying unused media assets."
      image="https://res.cloudinary.com/brad-dev/image/upload/w_800,f_auto,q_auto/ozyigi8zvfepycgo4v6g"
      image_alt="Screenshot of Cloudinary Last Access Reports Interface"
      link="https://github.com/brad-j/cloudinary-lar"
      button_text="View on GitHub"
    />
  </div>
</MainLayout>
